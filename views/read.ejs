<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen flex justify-center items-center p-6">
    <div class="w-full max-w-6xl">
        <a class="text-blue-500" href="/">Back to Home</a>
        <h2 class="text-3xl font-bold mb-6 text-center">All Users</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <!-- User Card -->
             <% users.forEach(function(user){ %>
            <div class="bg-gray-800 p-5 rounded-xl shadow-lg flex flex-col items-center transition duration-300 hover:shadow-2xl hover:scale-105">
                <img src="<%= user.image %>" alt="User" class="w-28 h-28 rounded-full border-4 border-blue-500 mb-4">
                <h3 class="text-lg font-semibold"> <%= user.name %></h3>
                <p class="text-gray-400 text-sm mb-3"><%= user.email %></p>
                <img src="<%= user.image %>" alt="User Cover" class="w-full h-30 object-cover rounded-lg mb-3">
                <div class="mt-2 flex space-x-3">
                    <a href="/edit/<%= user._id %>" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg text-sm">Edit User</a>
                    <a href="/delete/<%= user._id %>" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg text-sm">Delete User</a>
                </div>
            </div>
            <% }) %>
            <!-- More cards can be dynamically added -->
        </div>
    </div>
</body>
</html>
